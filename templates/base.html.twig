<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/ico.svg') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>

    <body>
        <div class="header">
            <header class="site-header">
                <span class="site-title">mvc | Symphony</span>
            </header>

            <nav>
                <ul>
                    <li><a href="{{ path('home') }}">Home</a></li>
                    <li><a href="{{ path('about') }}">About</a></li>
                    <li><a href="{{ path('report') }}">Report</a></li>
                    <li><a href="{{ path('lucky') }}">Lucky</a></li>
                    <li><a href="{{ path('api') }}">Api</a></li>
                    <li><a href="{{ path('pig_start') }}">Pig Game</a></li>
                    <li><a href="{{ path('card_init') }}">Card Game</a></li>
                </ul>
            </nav>
        </div>
        {% block body %}{% endblock %}

        <div class="footer">
            <p>MVC - kursen</p>
            <a href="https://dbwebb.se/kurser/mvc-v2"><p>Kurs sida</p></a>
        </div>
    </body>
</html>
