{% extends "base.html.twig" %}

{% block title %}Pig Game{% endblock %}

{% block body %}
    <div class="main">
        <div class="container">
            <span><a href="{{ path('card_init') }}">Back to Card Menu</a></span>
            <h1>PLayers hand</h1>

            <div class="card-container">
                {% for game in playersGame %}
                    <span>{{ game.name }}</span>
                    <br>
                    {% for card in game.hand %}
                    <span class="card">{{ card }}</span>
                    {% endfor %}
                    <br>
                    <br>
                {% endfor %}
            </div>

            <br>
            <br>

            <h2>Number cards left in deck:</h2>
            <div class="card-container">
                <p class="card">{{ countCard }}</p>
            </div>

        </div>
    </div>
{% endblock %}
